<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @image.title %>
</p>

<p>
  <strong>Caption:</strong>
  <%= @image.caption %>
</p>

<p>
  <strong>Image url:</strong>
  <a href="<%= @image.image_url %>" target="_blank"><%= @image.image_url %></a>
</p>

<p>
  <strong>Image:</strong><br>
  <%= image_tag(@image.image_url) %>
</p>

<% if @image.autogenerated_description? %>
  <p>
    <strong>Autogenerated Description:</strong>
    <%= @image.autogenerated_description %>
  </p>
<% end %>

<% if @image.tag_list.any? %>
  <p>
    <strong>Autogenerated Tags:</strong>
    <%= @image.tag_list.each { |tag| tag } %>
  </p>
<% end %>

<%= link_to 'Edit', edit_image_path(@image) %> |
<%= link_to 'Back', images_path %>
