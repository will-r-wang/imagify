<p id="notice"><%= notice %></p>

<h1><%= link_to "Home Page", root_path %></h1>

<%= form_with url: images_path, method: :get do |form| %>
  <%= form.label :query, "Search:" %>
  <%= form.text_field :query %>
  <%= form.select :search_type, %w(title caption tag autogenerated_description) %>
  <%= form.submit "Search" %>
<% end %>

<h2>Images</h2>
<% if @images.blank? && params[:query].present? && params[:search_type].present? %>
  <p>No Images with <%= params[:search_type] %>=<%= params[:query] %> found.</p>
<% else %>
  <p style="color: green"><%= @images.length %> result(s) shown.</p>
  <table id="images">
    <thead>
      <tr>
        <th>Title</th>
        <th>Caption</th>
        <th>Image URL</th>
        <th>Tags</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @images.each do |image| %>
        <tr>
          <td><%= image.title.to_s %></td>
          <td><%= image.caption.to_s %></td>
          <td><a href="<%= image.image_url.to_s %>" target="_blank">Link</a></td>
          <td><% image.tag_list.each do |tag| %>
            <%= link_to tag, images_path({search_type: 'tag', query: tag}) %>
          <% end %></td>
          <td><%= link_to 'Show', image %></td>
          <td><%= link_to 'Edit', edit_image_path(image) %></td>
          <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<br>

